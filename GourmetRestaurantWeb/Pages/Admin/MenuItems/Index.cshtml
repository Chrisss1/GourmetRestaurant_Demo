@page
@model GourmetRestaurantWeb.Pages.Admin.MenuItems.IndexModel

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Menu Item List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="upsert" class="btn btn-primary">
				<i class="bi bi-plus-square"></i> &nbsp; Create New Menu Item</a>
		</div>
	</div>
	<br />

	<table id="DT_Load" class="table table-striped table-bordered" style="text-align:center">
		<thead>
			<tr>
				<th style="text-align:center">Name</th>
				<th style="text-align:center">Price</th>
				<th style="text-align:center">Category</th>
				<th style="text-align:center">Food Type</th>
				<th style="text-align:center">Edit / Delete</th>
			</tr>
		</thead>
	</table>
</div>

@section Scripts
{
	<script src="~/js/menuItem.js"></script>
}